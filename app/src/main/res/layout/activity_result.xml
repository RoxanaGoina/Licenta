<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:background="@color/cute_blue"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="30dp"
        android:layout_margin="25dp"
        android:backgroundTint="@color/white"
        app:cardElevation="15dp"

        >

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp">
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:text="Informatii necesare:"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="40dp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:text="Selecteaza daca ai fost pus intr-o situatie dintre cele de mai jos:"
                    android:textSize="20dp"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <CheckBox
                        android:id="@+id/checkBoxAnxiety"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anxietate"
                        android:textSize="20dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/blue"
                        android:buttonTint="@color/black"
                        />
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/black"
                        android:layout_marginLeft="15dp"
                        android:textSize="20dp"
                        android:textColorHint="@color/black"
                        android:text="Dorinte/Tentative de sinucidere"
                        android:textColor="@color/blue"
                        />
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:id="@+id/radioButtonDepression"
                        android:textColorHint="@color/black"
                        android:buttonTint="@color/black"
                        android:layout_marginLeft="15dp"
                        android:textSize="20dp"
                        android:text="Diagnosticul de depresie"

                        />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tratament pentru depresie"
                        android:textColor="@color/blue"
                        android:textSize="20dp"
                        android:buttonTint="@color/black"
                        android:layout_marginLeft="15dp"

                        />
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diagnostic de anxietate"
                        android:textSize="20dp"
                        android:textColor="@color/blue"
                        android:buttonTint="@color/black"
                        android:layout_marginLeft="15dp"
                        />
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tratament pentru anxietate"
                        android:textColor="@color/blue"
                        android:textSize="20dp"
                        android:buttonTint="@color/black"
                        android:layout_marginLeft="15dp"
                        />


                </LinearLayout>



                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/blue"
                    android:text="Afisare rezultat"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:layout_margin="20dp"
                    />
            </LinearLayout>


        </ScrollView>

    </androidx.cardview.widget.CardView>
</LinearLayout>